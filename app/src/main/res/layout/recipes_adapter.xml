<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180sp"
    android:layout_height="250sp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_marginRight="10sp"
    android:layout_marginBottom="10sp"
    android:adjustViewBounds="true"

    android:background="@color/pink">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="180sp"
        android:layout_height="250sp"
        android:layout_gravity="left"

        android:elevation="3sp"
        card_view:cardCornerRadius="0sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10sp"
            android:background="@color/pink">

            <ImageView
                android:id="@+id/food_imageView"
                android:layout_width="180sp"
                android:layout_height="150sp"
                android:paddingRight="1dp"
                android:paddingLeft="1dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130sp"
                android:button="@drawable/favorites_selector"
                android:gravity="bottom|end"
                app:tint="@null" />

            <TextView
                android:id="@+id/food_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/food_imageView"
                android:layout_marginLeft="-1dp"
                android:layout_marginRight="-1dp"
                android:background="@drawable/side_and_bottom_border"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:paddingRight="10sp"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>