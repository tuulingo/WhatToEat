<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16sp"
                android:text="@string/breakfast"
                android:paddingLeft="10sp"
                android:paddingRight="15sp"
                android:background="@drawable/border"
                android:theme="@style/FoodTypeTextview" />

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                android:id="@+id/breakfast_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                app:msrv_gravity="start"
                app:msrv_ms_per_inch="100"
                app:msrv_snap_count="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16sp"
                android:text="Dinner"
                android:paddingLeft="10sp"
                android:paddingRight="35sp"
                android:background="@drawable/border"
                android:theme="@style/FoodTypeTextview" />

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                android:id="@+id/main_course_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                app:msrv_gravity="center"
                app:msrv_ms_per_inch="100"
                app:msrv_snap_count="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16sp"
                android:text="@string/salad"
                android:paddingLeft="10sp"
                android:paddingRight="50sp"
                android:background="@drawable/border"
                android:theme="@style/FoodTypeTextview"/>

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                android:id="@+id/salad_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                app:msrv_gravity="center"
                app:msrv_ms_per_inch="100"
                app:msrv_snap_count="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16sp"
                android:text="@string/dessert"
                android:paddingLeft="10sp"
                android:paddingRight="35sp"
                android:background="@drawable/border"
                android:theme="@style/FoodTypeTextview" />

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                android:id="@+id/dessert_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                app:msrv_gravity="center"
                app:msrv_ms_per_inch="100"
                app:msrv_snap_count="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16sp"
                android:text="@string/beverage"
                android:paddingLeft="10sp"
                android:paddingRight="20sp"
                android:background="@drawable/border"
                android:theme="@style/FoodTypeTextview" />

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                android:id="@+id/beverage_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                app:msrv_gravity="center"
                app:msrv_ms_per_inch="100"
                app:msrv_snap_count="2" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>