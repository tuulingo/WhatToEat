<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecificFoodRecipeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/pink">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pink">

            <ImageView
                android:id="@+id/specific_food_imageView"
                android:layout_width="match_parent"
                android:layout_height="315sp"
                android:layout_marginTop="15sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="24sp"
                android:scaleType="fitXY"
                tools:src="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="310sp"
                android:button="@drawable/favorites_selector"
                android:gravity="bottom"
                android:textSize="60sp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/specific_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24sp"
            android:textSize="32sp"
            android:gravity="top"
            android:layout_marginBottom="20sp"
            android:textColor="@color/white"
            android:text="Food name" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dairy_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:layout_marginBottom="20sp"
                android:text="dairy free"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gluten_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dairy_free"
                android:layout_marginLeft="24sp"
                android:layout_marginBottom="20sp"
                android:text="gluten free"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/vegan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="121dp"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="116dp"
                android:layout_marginBottom="20sp"
                android:layout_toEndOf="@+id/dairy_free"
                android:paddingRight="36sp"
                android:text="vegan"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/vegetarian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vegan"
                android:layout_alignParentRight="true"
                android:layout_marginStart="113dp"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="114dp"
                android:layout_marginBottom="20sp"
                android:layout_toEndOf="@+id/gluten_free"
                android:paddingRight="36sp"
                android:text="vegetarian"
                android:textSize="16sp"
                android:textColor="@color/white" />


        </RelativeLayout>

        <TextView
            android:id="@+id/ready_in_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24sp"
            android:layout_marginBottom="12sp"
            android:text="Ready in minutes"
            android:textSize="22sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/recipe_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24sp"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="20sp"
            android:fontFamily="@font/amatica_sc_bold"
            android:textSize="22sp"
            android:text="Description of the recipe"
            android:textColor="@color/white"
            />


        <TextView
            android:id="@+id/recipe_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24sp"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="20sp"
            android:textSize="20sp"
            android:autoLink="web"
            android:textColorLink="@color/cyan"
            android:text="Source of recipe"
            android:textColor="@color/white"
            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>